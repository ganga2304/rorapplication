<h1 class="text-center mt-4">Log in</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <%= form_with(scope: :session,url: login_path,class: "shadow p-3 mb-3 bg-light rounded") do |f| %>
        <div class="mb-3">
          <%= f.label :email,class:"col-2 form-label"%>
          <%= f.email_field :email,class:"form-control shadow rounded",placeholder: "Enter the email address"%>
        </div>

        <div class="mb-3">
          <%= f.label :password,class:"col-2 form-label" %>
          <%= f.password_field:password,class:"form-control shadow rounded",placeholder: "Enter the password" %>
        </div>
        <div class="mb-3 d-flex justify-content-center">
          <%= f.submit "Log in",class:"btn btn-outline-primary"%>
        </div>

      <% end %>

    </div>
  </div>
    <div class="d-flex justify-content-center mb-3">
      <%= link_to 'Back to list page', courses_path %>
    </div>
  </div>


