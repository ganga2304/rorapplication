<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <%= render 'shared/error',obj:@course %>
      <%= form_with(model: @course,class: "shadow p-3 mb-3 bg-light rounded") do |f| %>
        <div class="mb-3">
          <%= f.label :name,class:"col-2 form-label"%>
          <%= f.text_field :name,class:"form-control shadow rounded",placeholder: "Enter Course name"%>
        </div>
        <div class="mb-3">
          <%= f.label :description,class:"col-2 form-label"%>
          <%= f.text_area :description,rows:5,class:"form-control shadow rounded",placeholder: "Enter description"%>
        </div>
        <div class="mb-3">
          <%= f.label :price,class:"col-2 form-label" %>
          <%= f.number_field:price,class:"form-control shadow rounded",placeholder: "Enter price of course" %>
        </div>
        <div class="mb-3 d-flex justify-content-center">
          <%= f.submit "Create Course",class:"btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
    <div class="d-flex justify-content-center mb-3">
      <%= link_to 'Back to list page', courses_path %>
    </div>
  </div>


