<h1>Edit the course </h1>
<%if @course.errors.any?%>
  <h2>The following errors prevented the course from being saved</h2>
  <ul>
  <% @course.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model: @course) do |f| %>
    <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    </p>
    <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
    </p>
    <p>
    <%= f.label :price %><br>
    <%= f.number_field:price %>
    </p>
    <p>
    <%= f.submit "Create Course" %>
    </p>
<% end %>

<%= link_to 'Back to list page', courses_path %>

