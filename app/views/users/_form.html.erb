<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <%= render 'shared/error',obj:@user %>
      <%= form_with(model: @user,class: "shadow p-3 mb-3 bg-light rounded") do |f| %>
        <div class="mb-3">
          <%= f.label :username,class:"col-2 form-label"%>
          <%= f.text_field :username,class:"form-control shadow rounded",placeholder: "Enter  Username"%>
        </div>
        <div class="mb-3">
          <%= f.label :email,class:"col-2 form-label"%>
          <%= f.email_field :email,class:"form-control shadow rounded",placeholder: "Enter the email address"%>
        </div>
        <div class="mb-3">
          <%= f.label :password,class:"col-2 form-label" %>
          <%= f.password_field:password,class:"form-control shadow rounded",placeholder: "Enter price of course" %>
        </div>
        <div class="mb-3 d-flex justify-content-center">
          <%= f.submit "Sign up",class:"btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
    <div class="d-flex justify-content-center mb-3">
      <%= link_to 'Back to list page', courses_path %>
    </div>
  </div>


